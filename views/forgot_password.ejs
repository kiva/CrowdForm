<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">


        <link href="/kiva_style.css" rel="stylesheet" type="text/css">
        <meta name="description" content="">
        <meta name="author" content="">
        <script src="//code.jquery.com/jquery-1.9.1.js"></script>
        <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

        <title>Reset Password</title>
    </head>

    <body>

    <div id="wrapper">
    <% include banner %>

    <div id="content">
        <div id="forgot-password-form">
            <h1>Reset Password</h1>
            <br><br>
			<div id="email-alert" style="display:none;">An email has been sent to this address to recover your login</div>
            <form id="forgot-password-submit" action="/volunteer/forgot-password" method="POST">
                <label for="email_address">Email Address</label>
                <input type="email" id="email_address" name="email_address" size="20" class="form-control" required>
                <br>
                <input type="submit" id="submit-button" class="btn btn-primary" disabled>
            </form>
        </div><br>
    </div>
    <% include footer %>
    </div>
    </body>
    <script>
        $(document).ready(function() {
            $('#forgot-password-submit').submit(function(e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/volunteer/send_forgot_password",
                    data: {email: $('[name=email_address]').val()},
                    success: function(data) {
                        switch (data) {
                            case "email":
                                $('#email-alert').show();
                        }
                    }
                });
            });
        });
        </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</html>
